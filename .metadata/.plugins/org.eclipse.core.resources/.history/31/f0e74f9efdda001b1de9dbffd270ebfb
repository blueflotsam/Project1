    function addTotal(type, amount){
    	if(type=='Certification'){
    		total-=amount;
    	}
    	else if(type=='Seminars'){
    		total-=amount*.6;
    	}
    	else if(type=='Technical Training'){
    		total-=amount*.9;
    	}
    	else if(type=='Certification Prep'){
    		total-=amount*.75;
    	}
    	else{
    		total-=amount*.3;
    	}
    	if(total<0)
    		total=0;
    	
    	
    }
};

