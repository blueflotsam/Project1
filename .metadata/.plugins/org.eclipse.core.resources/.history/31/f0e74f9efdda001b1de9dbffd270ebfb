            		tdInfo.innerHTML=info;
            		tr.appendChild(tdInfo);
            		list.appendChild(tr);
            		
            		
            		if(status=='employee'){
            			let b=document.createElement('button');
            			b.addEventListener("click", async function(){
            	        	let input=window.prompt("Enter an explanation for approval");
